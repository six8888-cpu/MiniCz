{
  "manifest_version": 3,
  "name": "MiniCz",
  "version": "1.0.0",
  "description": "点击CZ，根据时间起卦占卜吉凶",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["divination.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "assets/frames/*", "assets/*.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}
